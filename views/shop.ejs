<%- include('partials/header') %>
<main class="p-8">
  <h1 class="text-3xl font-bold text-center mb-8">Shop All</h1>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Product Cards -->
    <div class="card w-96 bg-base-100 shadow-xl">
      <figure><img src="/images/men-card.avif" alt="Men's Fashion"></figure>
      <div class="card-body">
        <h2 class="card-title">Men's Collection</h2>
        <p>Explore the latest trends in men's fashion.</p>
        <div class="card-actions justify-end">
          <a href="/shop/men" class="btn btn-primary">Shop Now</a>
        </div>
      </div>
    </div>
    <div class="card w-96 bg-base-100 shadow-xl">
      <figure><img src="/images/women-card.webp" alt="Women's Fashion"></figure>
      <div class="card-body">
        <h2 class="card-title">Women's Collection</h2>
        <p>Discover stylish outfits for women.</p>
        <div class="card-actions justify-end">
          <a href="/shop/women" class="btn btn-primary">Shop Now</a>
        </div>
      </div>
    </div>
    <div class="card w-96 bg-base-100 shadow-xl">
      <figure><img src="/images/kids-card.avif" alt="Kids' Fashion"></figure>
      <div class="card-body">
        <h2 class="card-title">Kids' Collection</h2>
        <p>Adorable and comfortable clothing for kids.</p>
        <div class="card-actions justify-end">
          <a href="/shop/kids" class="btn btn-primary">Shop Now</a>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include('partials/footer') %>